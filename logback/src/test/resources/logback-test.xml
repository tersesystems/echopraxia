<configuration>
    <appender name="LIST" class="ch.qos.logback.core.read.ListAppender">
    </appender>

    <!-- handles conditions passed through ConditionMarker -->
    <turboFilter class="echopraxia.logback.ConditionTurboFilter"/>

    <root level="TRACE">
        <appender-ref ref="LIST"/>
    </root>
</configuration>